{% extends 'base.html.twig' %}

{% block title %}Ingredient{% endblock %}

{% block body %}
    <h1>Ingredient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ ingredient.nom }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('images/ingredient/' ~ ingredient.image) }}" alt="{{ ingredient.nom }}"class="w-25"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_ingredient_index') }}">back to list</a>

    <a href="{{ path('admin_ingredient_edit', {'id': ingredient.id}) }}">edit</a>

    {{ include('admin_ingredient/_delete_form.html.twig') }}
{% endblock %}
